<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="left_height" format="dimension"></attr>
    <attr name="left_color" format="color"></attr>
    <attr name="text_size" format="dimension"></attr>
    <attr name="text_color" format="color"></attr>
    <attr name="text_offset" format="dimension"></attr>
    <attr name="text_distance" format="dimension"></attr>
    <attr name="text_border_color" format="color"></attr>
    <attr name="text_border_size" format="dimension"></attr>
    <attr name="text_border_isshow" format="boolean"></attr>
    <attr name="right_height" format="dimension"></attr>
    <attr name="right_color" format="color"></attr>
    <declare-styleable name="MyProgessBarAttrs">
        <attr name="left_height"></attr>
        <attr name="left_color"></attr>
        <attr name="text_size"></attr>
        <attr name="text_color"></attr>
        <attr name="text_offset"></attr>
        <attr name="text_distance"></attr>
        <attr name="text_border_color"></attr>
        <attr name="text_border_size"></attr>
        <attr name="text_border_isshow"></attr>
        <attr name="right_height"></attr>
        <attr name="right_color"></attr>
    </declare-styleable>

    <declare-styleable name="MyRoundProgressBarAttrs">
        <attr name="radius" format="dimension"></attr>
    </declare-styleable>


    <!--自定义属性 -->
    <declare-styleable name="ClipViewLayout">
        <attr name="clipType" format="enum">
            <enum name="circle" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="mHorizontalPadding" format="dimension" />
        <attr name="clipBorderWidth" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

</resources>