<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/view_0"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x15"
        android:layout_marginLeft="@dimen/x40"
        android:background="#A6A6A6" />
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/x15"
        android:layout_height="@dimen/x15"
        android:layout_below="@+id/view_0"
        android:layout_marginLeft="@dimen/x33"
        android:src="@drawable/timeline_blue" />
    <View
        android:id="@+id/view_2"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/x43"
        android:layout_below="@+id/image"
        android:layout_marginLeft="@dimen/x40"
        android:background="#A6A6A6" />

    <View
        android:id="@+id/view_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_alignBottom="@+id/view_2"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginRight="@dimen/x65"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x10"
        android:layout_toRightOf="@+id/view_0"
        android:layout_alignBottom="@+id/view_4"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/name"
            android:layout_width="@dimen/x76"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/x8"
            android:maxEms="7"
            android:paddingLeft="@dimen/x5"
            android:singleLine="true"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/is_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/name"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/x8"
            android:maxEms="7"
            android:paddingLeft="@dimen/x8"
            android:singleLine="true"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@+id/is_pass"
            android:layout_marginTop="@dimen/x8"
            android:maxEms="7"
            android:paddingLeft="@dimen/x5"
            android:singleLine="true"
            android:textSize="14sp" />

    </RelativeLayout>




</RelativeLayout>