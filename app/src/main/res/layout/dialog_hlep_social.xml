<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x200"
    android:layout_height="@dimen/x150"
    android:layout_gravity="center"
    android:background="@drawable/shape_overtime"
    android:orientation="vertical"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x150"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/dialog_social_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x14"
            android:text="是否参加过社保"
            android:textSize="16sp" />


        <RadioGroup
            android:id="@+id/dialog_social_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/x24"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:layout_below="@+id/dialog_social_title">


            <RadioButton
                android:id="@+id/dialog_social_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:text="是"
                android:paddingLeft="@dimen/x23"
                android:gravity="center"
                android:layout_weight="1"
                android:checked="true"
                android:button="@drawable/btn_checkbox_selector"
                />
            <RadioButton
                android:id="@+id/dialog_social_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.0sp"
                android:textColor="@android:color/black"
                android:text="否"
                android:paddingLeft="@dimen/x23"
                android:gravity="center"
                android:layout_weight="1"
                android:button="@drawable/btn_checkbox_selector"
                />
        </RadioGroup>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/dialog_social_radiogroup"
            android:layout_marginTop="@dimen/x24"
            android:layout_marginLeft="@dimen/x14"
            android:layout_marginRight="@dimen/x14"
            android:src="@color/black"

            />
        <LinearLayout
            android:id="@+id/dialog_social_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_social_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@null"
                android:text="@string/cancel"
                android:textColor="@color/black_tran"
                 />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_marginTop="@dimen/x8"
                android:layout_marginBottom="@dimen/x10"
                android:src="@color/black"
                />
            <Button
                android:id="@+id/dialog_social_sumbit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@null"
                android:text="@string/determine"
                android:textColor="@color/bookBlue" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>