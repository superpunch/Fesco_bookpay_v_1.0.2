<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bookGrayground"
    android:orientation="vertical">
    <include layout="@layout/toolbar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x7"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x35"
                android:layout_weight="1"
                android:gravity="center"
                android:text="签到类型"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/x1"
                android:background="@color/white"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x35"
                android:layout_weight="1"
                android:gravity="center"
                android:text="签到时间"
                android:textColor="@color/black"
                android:background="@color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x35"
                android:id="@+id/checkdetail_type"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/not_available"
                android:background="@color/white"
                android:layout_marginRight="@dimen/x1"
                android:layout_marginBottom="@dimen/x1"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="@dimen/x35"
                android:id="@+id/checkdetail_checktime"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/not_available"
                android:background="@color/white"
                />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x35"
            android:layout_weight="1"
            android:gravity="center"
            android:text="签到地点"
            android:textColor="@color/black"
            android:layout_marginRight="@dimen/x1"
            android:background="@color/white"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x35"
            android:layout_weight="1"
            android:gravity="center"
            android:text="申请时间"
            android:textColor="@color/black"
            android:background="@color/white"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x35"
            android:id="@+id/checkdetail_address"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/not_available"
            android:background="@color/white"
            android:layout_marginRight="@dimen/x1"
           />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/x35"
            android:id="@+id/checkdetail_approval"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/not_available"
            android:background="@color/white"

            />
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_checkdetali_momo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x1"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x7"
                android:paddingLeft="@dimen/x17"
                android:paddingRight="@dimen/x17"
                android:paddingTop="@dimen/x7"
                android:text="补签原因"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/checkdetail_momo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:cursorVisible="false"
                android:hint="无"
                android:paddingBottom="@dimen/x7"
                android:paddingLeft="@dimen/x17"
                android:paddingRight="@dimen/x7"
                android:paddingTop="@dimen/x7"
                android:textColor="@color/black"
                android:textSize="@dimen/x12" />

        </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x11"
        android:background="@color/white"
        >

    <LinearLayout
        android:id="@+id/linear_checkdetali_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x17"
            android:paddingRight="@dimen/x17"
            android:text="审批意见"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/checkdetail_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:background="@null"
            android:hint="请输入审批意见"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x17"
            android:paddingRight="@dimen/x7"
            android:paddingTop="@dimen/x7"
            android:textColor="@color/black"
            android:textSize="@dimen/x12" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linear_checkdetali_person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x17"
            android:paddingRight="@dimen/x17"
            android:paddingTop="@dimen/x7"
            android:text="再次审批"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/checkdetail_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="false"
            android:hint="点击选择再次审批人"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x17"
            android:paddingRight="@dimen/x7"
            android:paddingTop="@dimen/x7"
            android:textColor="@color/black"
            android:textSize="@dimen/x12" />

    </LinearLayout>
    </LinearLayout>
<include
    android:id="@+id/layout_lastapproval"
    layout="@layout/include_restdetail_patch"
    ></include>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkdetail_agree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bookBlue"
            android:text="@string/agree"
            android:textColor="@color/black"
            />
        <Button
            android:id="@+id/checkdetail_disagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/bookBackground"
            android:textColor="@color/white"
            android:text="@string/disagree"
            />


    </LinearLayout>




</LinearLayout>
