<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/om_rec_name"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x7"
        android:paddingTop="@dimen/x7"
        android:paddingBottom="@dimen/x7"
        android:textSize="@dimen/x14"
        android:text="张雅婷"
        android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/om_rec_applica"
                android:layout_below="@+id/om_rec_name"
                android:paddingLeft="@dimen/x17"
                android:paddingRight="@dimen/x7"
                android:paddingTop="@dimen/x7"
                android:paddingBottom="@dimen/x7"
                android:text="@string/approval_time"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/om_applica_time"
                android:layout_toRightOf="@+id/om_rec_applica"
                android:layout_alignTop="@+id/om_rec_applica"
                android:paddingLeft="@dimen/x17"
                android:paddingRight="@dimen/x7"
                android:paddingTop="@dimen/x7"
                android:paddingBottom="@dimen/x7"
                android:text="@string/not_available"
                android:textColor="@color/gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_066"
        android:layout_marginLeft="@dimen/x17"
        android:layout_marginRight="@dimen/x117"
        android:layout_below="@+id/om_applica_time"
        android:background="@color/grayInfor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/om_start"
        android:layout_below="@+id/om_applica_time"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x7"
        android:paddingTop="@dimen/x7"
        android:paddingBottom="@dimen/x7"
        android:text="@string/approval_star"
        android:textColor="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/om_start_time"
        android:layout_toRightOf="@+id/om_start"
        android:layout_alignTop="@+id/om_start"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x7"
        android:paddingTop="@dimen/x7"
        android:paddingBottom="@dimen/x7"
        android:text="@string/not_available"
        android:textColor="@color/gray" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/om_end"
        android:layout_below="@+id/om_start"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x7"
        android:paddingBottom="@dimen/x7"
        android:text="@string/approval_end"
        android:textColor="@color/gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/om_end_time"
        android:layout_toRightOf="@+id/om_end"
        android:layout_alignTop="@+id/om_end"
        android:paddingLeft="@dimen/x17"
        android:paddingRight="@dimen/x7"
        android:paddingBottom="@dimen/x7"
        android:text="@string/not_available"
        android:textColor="@color/gray" />

 <include layout="@layout/include_overtime_text"/>




        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>