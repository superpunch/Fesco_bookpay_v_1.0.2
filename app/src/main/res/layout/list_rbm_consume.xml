<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x63"
    android:background="@color/white"
    android:layout_marginLeft="@dimen/x9"
    android:layout_marginRight="@dimen/x9"
    android:layout_marginTop="@dimen/x8"
    android:layout_marginBottom="@dimen/x4"
    android:layout_gravity="center"

    >


    <CheckBox
        android:id="@+id/id_check_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/btn_checkbox_selector"
        android:button="@null"
        android:focusable="false"
android:visibility="gone"
        android:layout_centerVertical="true"
       />




    <ImageView
        android:id="@+id/csm_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_delete_red"
        android:layout_alignParentTop="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_image"
        android:layout_marginLeft="@dimen/x19"
        android:layout_marginRight="@dimen/x15"
        android:textSize="25sp"
        android:text="@string/fa_address"
        android:textColor="@color/bookBlue"
        android:layout_centerVertical="true"
        android:layout_below="@+id/csm_delete"
        android:layout_toRightOf="@+id/id_check_select" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_type"
        android:text="@string/title"
        android:layout_alignTop="@+id/csm_image"
        android:layout_toRightOf="@+id/csm_image"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_day"

        android:layout_marginTop="@dimen/x4"
        android:gravity="center_horizontal"
        android:hint="2013-11-02"
        android:layout_toRightOf="@id/csm_image"
        android:layout_below="@id/csm_type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_tvday"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/x4"
        android:gravity="center_horizontal"
        android:hint="~"
        android:layout_toRightOf="@id/csm_day"
        android:layout_below="@id/csm_type"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_endday"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/x4"
        android:gravity="center_horizontal"
        android:hint="2014-11-02"
        android:layout_toRightOf="@id/csm_tvday"
        android:layout_below="@id/csm_type"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_money_flag"
        android:textSize="@dimen/x14"
        android:textColor="@color/bookBlue"
        android:layout_marginRight="@dimen/x1"
        android:text="ï¿¥"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/csm_money"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csm_money"
        android:textSize="@dimen/x14"
        android:textColor="@color/bookBlue"
        android:text="0.00"
        android:layout_marginRight="@dimen/x10"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>