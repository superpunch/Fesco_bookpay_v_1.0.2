<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x196"
    android:layout_height="@dimen/x120"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    >



    <!--   <LinearLayout
          android:id="@+id/contentView"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content" > -->

    <EditText
        android:id="@+id/number"
        android:layout_width="@dimen/x150"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:background="@drawable/dialog_edit_style"
        android:textColor="@color/grayInfor"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x35"
        android:gravity="left|center"
        android:hint="请输入外勤备注" />
    <!-- </LinearLayout> -->
    <View
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/dp_066"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/x50"
        android:layout_gravity="bottom|center"

        android:gravity="center"
        android:orientation="horizontal" >



        <Button
            android:id="@+id/negativeButton"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x40"

            android:textColor="@color/white"
            android:background="@color/bookBlue"
            android:text="@string/cancel"
            android:gravity="center" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x40"
            android:layout_marginLeft="@dimen/x10"
            android:textColor="@color/white"
            android:background="@color/bookBlue"
            android:gravity="center"
            android:text="@string/determine"
            />
    </LinearLayout>






</LinearLayout>
