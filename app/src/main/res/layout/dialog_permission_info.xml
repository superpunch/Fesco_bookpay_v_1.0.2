<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_per"
        android:padding="@dimen/x8"
        android:textColor="#eee"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_dialog_one"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前应用缺少必要权限。"
        android:layout_margin="@dimen/x5"
        android:padding="3dp" />
    <TextView
        android:id="@+id/tv_dialog_two"
        android:layout_below="@+id/tv_dialog_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请点击设置-权限-打开所需权限"
        android:layout_margin="@dimen/x5"
        android:padding="3dp" />
    <TextView
        android:id="@+id/tv_dialog_message"
        android:layout_below="@+id/tv_dialog_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="权限"
        android:textColor="@color/oranger"
        android:layout_margin="@dimen/x5"
        android:padding="3dp" />
    <TextView
        android:id="@+id/tv_dialog_setting"
        android:layout_below="@+id/tv_dialog_message"
        android:textColor="@color/green_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="设置"
        android:layout_marginTop="@dimen/x23"
        android:layout_marginRight="@dimen/x33"
        android:layout_marginBottom="@dimen/x25"
        />

    <TextView
        android:id="@+id/tv_dialog_exit"
        android:layout_below="@+id/tv_dialog_message"
        android:layout_toLeftOf="@id/tv_dialog_setting"
        android:textColor="@color/green_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出"
        android:layout_marginTop="@dimen/x23"
        android:layout_marginRight="@dimen/x33"
        android:layout_marginBottom="@dimen/x25"
        />
</RelativeLayout>